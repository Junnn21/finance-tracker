<h2>User Details</h2>

<div class="mt-3 card card-header results-block">
    <table class="col-md-12">
        <tbody>
            <tr>
                <td><strong>Email: </strong><%= @user.email %></td>
                <td><strong>Name: </strong><%= @user.full_name %></td>
                <td>
                    <% if current_user.not_friends_with?(@user.id) %>
                        <%= link_to "Follow", friendships_path(friend: @user), class: "btn btn-sm btn-success", data: { turbo_method: :post } %>
                    <% else %>
                        <span class="badge bg-primary">
                            You are friends
                        </span>
                    <% end %>
                </td>     
            </tr>
        </tbody>
    </table>
</div>

<% if !@tracked_stocks.empty? %>
    <%= render 'stocks/list' %>
<% else %>
    <p class="lead mt-3">This user is not tracking any stocks</p>
<% end %>